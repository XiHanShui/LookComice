<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.wujie.lookcomics.ui.fragment.me.MeFragment">

    <FrameLayout
        android:id="@+id/me_flayout"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/yellow">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ic_personal_headportrait"
            />
    </FrameLayout>

    <View
        android:id="@+id/me_space_one"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/me_flayout"
        android:background="#F0F0F0"/>

    <RelativeLayout
        android:id="@+id/me_iten_one"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/me_space_one"
        android:layout_marginLeft="10dp"
        >

        <ImageView
            android:id="@+id/me_mymessage_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_item_message"/>

        <TextView
            android:id="@+id/me_mymessage_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/me_mymessage_img"
            android:gravity="center_vertical"
            android:text="我的消息"
            android:textColor="@color/heise"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_user_home_next"/>
    </RelativeLayout>


    <View
        android:id="@+id/me_space_two"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@id/me_iten_one"
        android:background="#F0F0F0"/>

    <RelativeLayout
        android:id="@+id/me_item_two"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/me_space_two"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/me_myattention_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_item_follow"/>

        <TextView
            android:id="@+id/me_myattention_tv1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/me_myattention_img"
            android:gravity="center_vertical"
            android:text="我的关注"
            android:textColor="@color/heise"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_user_home_next"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#f0f0f0"/>
    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/me_item_three"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/me_item_two"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/me_mycollection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_item_collection"/>

        <TextView
            android:id="@+id/me_collection_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/me_mycollection"
            android:gravity="center_vertical"
            android:text="我的收藏"
            android:textColor="@color/heise"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_user_home_next"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#f0f0f0"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/me_item_four"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/me_item_three"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/me_down_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_item_download_comic"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/me_down_img"
            android:orientation="vertical">

            <TextView
                android:id="@+id/me_down_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="智能下载"

                android:textColor="@color/heise"/>

            <TextView
                android:id="@+id/me_down_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:text="下载今天已更新的漫画"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/me_space_three"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/me_item_four"
        android:background="#F0F0F0"/>

    <RelativeLayout
        android:id="@+id/me_item_five"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_below="@id/me_space_three"
        android:layout_marginLeft="10dp">

        <ImageView
            android:id="@+id/me_setup_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_me_item_setup"/>

        <TextView
            android:id="@+id/me_setup_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/me_setup_img"
            android:gravity="center_vertical"
            android:text="设置"
            android:textColor="@color/heise"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_user_home_next"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/me_item_five"
        android:background="#f0f0f0"/>
</RelativeLayout>
